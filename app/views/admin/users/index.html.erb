<h1><%= t "admin.users.list_of_user" %></h1>
<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "admin.users.table.thead.id" %></th>
      <th><%= t "admin.users.table.thead.name" %></th>
      <th><%= t "admin.users.table.thead.email" %></th>
      <th><%= t "admin.users.table.thead.role" %></th>
      <th><%= t "admin.users.table.thead.created_at" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.role.capitalize %></td>
        <td><%= user.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
