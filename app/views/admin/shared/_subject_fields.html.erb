<div class="fields">
  <div class="row">
    <div class="col-md-10">
      <%= link_to_remove_fields t("admin.courses.remove_subject"), f %><br />
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <%= f.fields_for :tasks do |builder| %>
        <%= render "task_fields", f: builder %>
      <% end %>
      <p><%= link_to_add_fields t("admin.subjects.new_task"), f, :tasks %></p>
    </div>
  </div>
</div>
