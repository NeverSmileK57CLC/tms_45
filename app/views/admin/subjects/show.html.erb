<% provide :title, t("admin.subjects.subject") %>
<div class="header">
  <ul class="list-inline pull-right">
    <li>
      <%= link_to t("buttons.edit"),
        edit_admin_subject_path(@subject), class: "btn btn-primary" %>
    </li>
    <li>
      <%= link_to t("application.buttons.delete"), [:admin, @subject],
        method: :delete, data: {confirm: t("messages.confirm")},
        class: "btn btn-danger" %>
    </li>
  </ul>
  <h2><%= @subject.name %></h2>
</div>

<div class="row">
  <div class="col-lg-12">
    <p><%= @subject.description %></p><br />
    <% @tasks.each do |task| %>
      <div class="col-lg-2">
        <div class="thumbnail text-center">
          <h4><%= task.name %></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
